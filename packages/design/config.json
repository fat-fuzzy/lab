{
	"source": ["src/tokens/**/*.json"],
	"platforms": {
		"scss": {
			"transformGroup": "scss",
			"buildPath": "dist/style-dictionary/",
			"files": [
				{
					"destination": "tokens.scss",
					"format": "scss/variables"
				}
			]
		},
		"css": {
			"transformGroup": "css",
			"buildPath": "dist/style-dictionary/",
			"files": [
				{
					"destination": "tokens.css",
					"format": "css/variables"
				}
			]
		},
		"js": {
			"transformGroup": "js",
			"buildPath": "dist/style-dictionary/",
			"files": [
				{
					"destination": "tokens.js",
					"format": "javascript/es6"
				}
			]
		}
	}
}
