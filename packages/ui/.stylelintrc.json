{
	"extends": ["stylelint-config-standard-scss"],
	"rules": {
		"selector-class-pattern" : "([a-z](\\:)?)+((\\:)?[a-z])+",
		"custom-property-pattern": "([a-z](-)?[0-9]?(-)?)+",
		"scss/dollar-variable-pattern" : "([a-z](-)?[0-9]?(-)?)+",
		"selector-attribute-quotes": "never",
		"rule-empty-line-before": "never"
	}
}
